{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"impliedStrict": true,
			"jsx": true
		}
	},
	"env": {
		"browser": true,
		"es6": true
	},
	"globals": {
		"GPDF_BULK_GENERATOR": false
	},
	"rules": {
		"semi": ["error", "never"],
		"space-in-parens": ["error", "never"],
		"react/jsx-uses-vars": 1,
		"react/display-name": 1,
		"no-control-regex": 0
	},
	"plugins": [
		"react"
	],
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"settings": {
		"react": {
			"pragma": "React",
			"version": "detect"
		}
	}
}
