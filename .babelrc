{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "browsers": [
            "last 2 versions"
          ]
        },
        "modules": false,
        "forceAllTransforms": true,
        "useBuiltIns": "usage"
      }
    ]

  ],
  "plugins": [
    "@babel/plugin-proposal-object-rest-spread",
    "@babel/plugin-proposal-class-properties"
  ],
  "env": {
    "test": {
      "plugins": [
        "./tests/mocha/arrow-function-coverage-fix.js",
        [
          "istanbul",
          {
            "exclude": [
              "tests/**"
            ]
          }
        ]
      ]
    }
  }
}